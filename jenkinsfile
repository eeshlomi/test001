pipeline {
	agent any
	stages {
		stage('test') {
			options { retry(2) }
			steps {
				sleep(time:1,unit:"SECONDS")
				echo "Commit hash is ${GIT_COMMIT}"
				sh '''#!/bin/bash
					[ "${GIT_BRANCH}" = "origin/master" ] && exit 0
					RETVAL=`git rev-list --left-right --count origin/master... | awk '{print $1}'`
					[ "${RETVAL}" != "0" ] && \
						echo master is ahead, merging... && \
						git merge origin/master -am merged-by-jenkins && \
						git show-ref && \
						git push "${GIT_URL}" +refs/heads/*:refs/remotes/*	" && \
						echo "Failing the stage for a retry after merge"
					exit $RETVAL
				'''
			}
		}
		stage('merge-to-master') {
			steps {
				sh '''#!/bin/bash
					[ "${GIT_BRANCH}" = "origin/master" ] && exit 0
					git checkout master
					git merge "${GIT_BRANCH}" -am merged-by-jenkins
					git push "${GIT_URL}" +refs/remotes/"${GIT_BRANCH}":refs/remotes/origin/master
					exit 0
				'''
			}
		}
	}
}
